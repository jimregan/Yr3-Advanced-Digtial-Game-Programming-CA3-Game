<States>
  <!-- 2017/03/16 Added assets for Settings menu screen -->
  <SETTINGS>
    <TEXTURES>
      <texture filename="assets/main.png" ID="mainbutton"/>                      <!-- Return to main menu button image -->
      <texture filename="assetsNew/buttonMusic.png" ID="musicButton"/>           <!-- 2017/03/16 Turn Music On / Off image -->
      <texture filename="assetsNew/buttonFullScreen.png" ID="fullscreenButton"/> <!-- 2017/03/16 Full Screen On / Off image -->
