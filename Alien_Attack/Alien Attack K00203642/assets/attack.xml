      <object type="MenuButton" x="100" y="10" width="400" height="100" textureID="playbutton" numFrames="0" callbackID="1"/>
      <object type="MenuButton" x="100" y="115" width="400" height="100" textureID="scorebutton" numFrames="0" callbackID="2"/>
      <object type="MenuButton" x="100" y="220" width="400" height="100" textureID="settingsbutton" numFrames="0" callbackID="3"/>
      <object type="MenuButton" x="100" y="325" width="400" height="100" textureID="exitbutton" numFrames="0" callbackID="4"/>
    </OBJECTS>
